@model IEnumerable<doancnpm.Models.SANPHAM>
@helper Truncate(string input, int length)
{
if (input.Length < length)
{
        @input
}
else
{
        @input.Substring(0, length)<text>...</text>
}
}

<div class=" bottom-product">
@foreach (var sp in Model)
{
    <div class="col-md-4 bottom-cd simpleCart_shelfItem">
        <div class="product-at ">
            <a href="@Url.Action("Single","Home",new { id = sp.MASP})">
                <img class="img-responsive" src="~/Content/Images/hinhsanpham/@sp.HINHANH" alt="">
                <div class="pro-grid">
                    <span class="buy-in">Mua Ngay</span>
                </div>
            </a>
        </div>
        <p class="tun">@Truncate(sp.TENSP, 30)</p>
        <a href="@Url.Action("Single","Home",new { id = sp.MASP})" class="item_add"><p class="number item_price"><i> </i>@sp.GIABAN VNĐ</p></a>
    </div>
}    
   
    <div class="clearfix"> </div>
</div>
