@model IEnumerable<doancnpm.Models.DANHMUC>

@{
    ViewBag.Title = "Danhmuc";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="contact">
    <div class="container" style="margin-top: 20px">
        <h1>TRANG QUẢN LÝ DANH MỤC</h1>
        <p>

        </p>

        <p>
            @Html.ActionLink("Thêm danh mục", "CreateDM")
        </p>
        <table class="table" border="1">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MADM)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TENDM)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MADM)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TENDM)
                    </td>
                    <td>
                        @Html.ActionLink("Xóa", "DeleteDM", new { id = item.MADM })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>